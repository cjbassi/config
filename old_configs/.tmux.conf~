#new-session -A -s 0

################################################################################
# Keybinds

# Change prefix
set -g prefix M-Space
unbind C-b

# Unbind all regular copy keybinds
unbind -T copy-mode -a

# Standard keybinds
bind -n M-? list-keys
bind -n M-[ copy-mode
bind -n M-] paste-buffer
bind -n M-d detach-client
bind -n M-p display-panes
bind -T prefix Space next-layout
bind -T prefix & kill-window
bind -T prefix , command-prompt -I "#W" "rename-window '%%'"
bind -T prefix . command-prompt "move-window -t '%%'"
bind -T prefix \; last-pane
bind -T prefix l last-window

bind -n M-r source-file ~/.tmux.conf \; display-message "Config reloaded"
bind -n M-R refresh-client \; display-message "Refreshed"

bind -n M-v split-window -h -c '#{pane_current_path}'
bind -n M-s split-window -v -c '#{pane_current_path}'

bind -n M-E kill-server
bind -n M-Q kill-pane

# Copy mode keybinds
bind -T copy-mode-vi v send-keys -X begin-selection
bind -T copy-mode-vi C-v send-keys -X rectangle-toggle
bind -T copy-mode-vi  y send-keys -X copy-selection

# Swap panes
bind -n M-H swap-pane -s {left-of}
bind -n M-J swap-pane -s {down-of}
bind -n M-K swap-pane -s {up-of}
bind -n M-L swap-pane -s {right-of}

# Select panes
bind -n M-h select-pane -L
bind -n M-l select-pane -R
bind -n M-j select-pane -D
bind -n M-k select-pane -U

WINDOW='/home/cbassi/config/tmux/tmux_window_script.sh'
PANE='/home/cbassi/config/tmux/tmux_pane_script.sh'

# Select window or create one
bind -n M-1 run-shell "zsh $WINDOW 1"
bind -n M-2 run-shell "zsh $WINDOW 2"
bind -n M-3 run-shell "zsh $WINDOW 3"
bind -n M-4 run-shell "zsh $WINDOW 4"
bind -n M-5 run-shell "zsh $WINDOW 5"
bind -n M-6 run-shell "zsh $WINDOW 6"
bind -n M-7 run-shell "zsh $WINDOW 7"
bind -n M-8 run-shell "zsh $WINDOW 8"
bind -n M-9 run-shell "zsh $WINDOW 9"
bind -n M-0 run-shell "zsh $WINDOW 10"

# Move pane to different window
bind -n M-! run-shell "zsh $PANE 1"
bind -n M-@ run-shell "zsh $PANE 2"
bind -n M-'#' run-shell "zsh $PANE 3"
bind -n M-'$' run-shell "zsh $PANE 4"
bind -n M-'%' run-shell "zsh $PANE 5"
bind -n M-'^' run-shell "zsh $PANE 6"
bind -n M-'&' run-shell "zsh $PANE 7"
bind -n M-'*' run-shell "zsh $PANE 8"
bind -n M-'(' run-shell "zsh $PANE 9"
bind -n M-')' run-shell "zsh $PANE 10"

################################################################################
# Options
set -g default-terminal "screen-256color"

set -s escape-time 0

set -g base-index 1
setw -g pane-base-index 1

setw -g automatic-rename on
set -g status-interval 1

set -g set-titles on # Sets title of entire terminal

set -g history-limit 10000

setw -g mode-keys vi # Vi movement for copy mode using [
set -g status-keys vi

set -g display-time 2000

setw -g aggressive-resize on

################################################################################
# Theme

# Status bar format
setw -g window-status-current-format ' #I:#W '
setw -g window-status-format ' #I:#W '
set -g status-left ''
# xargs trims whitespace
set -g status-right '\
#[fg=colour233,bg=colour239,bold] #(uptime | rev | cut -d":" -f1 | rev | sed s/,//g | xargs) \
#[fg=colour233,bg=colour241,bold] #(date +%a) \
#[fg=colour233,bg=colour243,bold] %m-%d-%y \
#[fg=colour233,bg=colour245,bold] %H:%M '
set -g status-right-length 50
set -g status-left-length 20
set -g status-justify left

# Show activity
setw -g monitor-activity on
set -g bell-action none
set -g visual-activity off
set -g visual-bell off
set -g visual-silence off
setw -g window-status-activity-attr reverse

# Copy mode colors
setw -g mode-attr bold
setw -g mode-fg colour196
setw -g mode-bg colour234

# Message colors
set -g message-attr bold
set -g message-fg colour232
set -g message-bg colour166

# Status bar background
set -g status-bg colour234

# Pane colors
set -g pane-border-bg colour235
set -g pane-border-fg colour238

set -g pane-active-border-bg colour236
set -g pane-active-border-fg colour20

# Window colors
setw -g window-status-current-fg colour27
setw -g window-status-current-bg colour233
setw -g window-status-current-attr bold

setw -g window-status-fg colour27
setw -g window-status-bg colour235
setw -g window-status-attr none

################################################################################
# vim-tmux-navigator

is_vim="ps -o state= -o comm= -t '#{pane_tty}' \
    | grep -iqE '^[^TXZ ]+ +(\\S+\\/)?g?(view|n?vim?x?)(diff)?$'"

bind-key -n M-h if-shell "$is_vim" "send-keys M-h"  "select-pane -L"
bind-key -n M-j if-shell "$is_vim" "send-keys M-j"  "select-pane -D"
bind-key -n M-k if-shell "$is_vim" "send-keys M-k"  "select-pane -U"
bind-key -n M-l if-shell "$is_vim" "send-keys M-l"  "select-pane -R"
#bind-key -n C-\ if-shell "$is_vim" "send-keys C-\\" "select-pane -l"

bind-key -T copy-mode-vi M-h select-pane -L
bind-key -T copy-mode-vi M-j select-pane -D
bind-key -T copy-mode-vi M-k select-pane -U
bind-key -T copy-mode-vi M-l select-pane -R
#bind-key -T copy-mode-vi C-\ select-pane -l

set -g status off
