# Bind 'R' to reload .screenrc file
bind R eval "source $HOME/.screenrc" "select 4" "kill" "select 3" "kill"

# Fix for residual editor text
altscreen on

# Turn welcome message off
startup_message off

# Informative statusbar
hardstatus alwayslastline '%{= kG}[ %{G}%H %{g}][%= %{= w}%?%-Lw%?%{= R}%n*%f %t%?%{= R}(%u)%?%{= w}%+Lw%?%= %{= g}][%{B} %m-%d %{W} %c %{g}]'

# Base-index from 0 to 1
bind c screen 1
bind ^c screen 1
bind 0 select 10                                                            

# Turn off visual bell
vbell off

# Messages display for 1 second
msgwait 1

# Screen windows
screen -t Vim 1
screen -t bash 2
select 1

bind K quit
