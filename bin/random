#!/usr/bin/env python

import random
import string
import sys


def binary(count=1):
    for _ in range(count):
        print(''.join(random.choice(['0', '1'])))


def ints(count=1, min=0, max=10):
    for _ in range(count):
        print(random.randint(min, max))


def floats(count=1, precision=2, min=0, max=10):
    for _ in range(count):
        num = random.uniform(min, max)
        print(f'{num:.{precision}f}')


def characters(x=1, y=1, spaces=0):
    alphanumeric = string.ascii_letters + string.digits
    if spaces:
        alphanumeric += ' '
    for _ in range(y):
        for _ in range(x):
            print(random.choice(alphanumeric), end='')
        print()


def words(count=1):
    word_file = '/usr/share/dict/cracklib-small'
    with open(word_file) as f:
        words = f.read().splitlines()
    for _ in range(count):
        print(random.choice(words))


if __name__ == '__main__':
    func_name = sys.argv[1]
    args = sys.argv[2:]
    args = map(int, args)
    functions = {
        'ints': ints,
        'integers': ints,

        'chars': characters,
        'characters': characters,

        'words': words,

        'binary': binary,

        'floats': floats,
    }
    functions[func_name](*args)
