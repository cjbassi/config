set $green		#859900

# class					border	backgr.	text	indica.	child_border
client.focused			$red	$gray3	$white	$red	$red
client.unfocused		$base00	#222222	#888888	#292d2e	#222222


# Startup-scripts {{{1

exec		startup
exec_always	reload-settings
