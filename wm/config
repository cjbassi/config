# Custom commands

# new_window normal 0 px
new_window none
# for_window [class="^.*"] border pixel 5
# client.unfocused #000000 #000000 #000000 #000000
# new_window 1pixel
# client.focused #FFFFFF #FFFFFF #FFFFFF #FFFFFF

# Wallpaper
exec_always --no-startup-id feh --bg-scale ~/Downloads/wallpaper.png

# 144hz
#exec_always xrandr --output DVI-D-0 --mode 1920x1080 --rate 144
exec_always --no-startup-id xrandr --output DVI-D-0 --mode 1920x1080

# Remap caps lock to escape
exec_always --no-startup-id xmodmap ~/config/peripherals/xkeys

gaps inner 10
gaps outer 0

# exec --no-startup-id i3-msg 'exec /usr/bin/pulseaudio --start'

# Polybar
exec_always --no-startup-id ~/config/polybar/launch.sh

# Xresources
exec_always --no-startup-id [ -f ~/.Xresources ] && xrdb -merge ~/.Xresources

exec_always --no-startup-id xbindkeys -p

exec --no-startup-id sh -c "pactl set-sink-mute 0 falseÂ ; pactl set-sink-volume 0 40%"

exec --no-startup-id compton -b --config ~/config/wm/compton.conf
exec --no-startup-id devilspie -a

exec --no-startup-id unclutter --timeout 5

exec_always --no-startup-id xset r rate 250 25

