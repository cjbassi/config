//! [events]
//! keys = ['ESC', 'LEFTSHIFT', '9', '0', 'SPACE', 'LEFTCTRL', 'LEFTALT', 'BACKSPACE', 'ENTER']
fn main() ~ evdevs, uinput {
	should_escape := false
	loop {
		events := next_events(evdevs)
		for i {
			event := events[i]
			xcape(mut should_escape, event, KEY_LEFTSHIFT(), [KEY_ESC()])
		}
	}
}
