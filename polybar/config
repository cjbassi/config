[module/my_filesystem]
type = custom/script
interval = 30
label = %{F#0a81f5}/%{F-} : %output%B
exec = ~/config/filesystem.sh
format-prefix = " "
format-underline = #006400

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
