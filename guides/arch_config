useradd -m -G wheel cbassi
passwd cbassi

systemctl enable dhcpcd@().service

pacman:
sudo openssh git python3 java gcc ag xterm ntp
vim tmux zsh ranger vimpager glances highlight

visudo; search root and find wheel line

systemctl enable sshd.service

fbcon=scrollback:64k

chsh -s $(which zsh)

sudo timedatectl set-local-rtc 0
sudo timedatectl set-timezone America/Los_Angeles
systemctl enable ntpd.service

journalctl -u sshd | vimpager

ssh-keygen -t ed25519 -C "$(whoami)@$(hostname)-$(date -I)"
eval $(ssh-agent)
ssh-add ~/.ssh/id_ed25519


aur:
chrome i3-gaps discord neofetch
